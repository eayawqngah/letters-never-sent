#--------------------------
# Server
#--------------------------
server <- function(input, output, session) {
# Reactive trigger to refresh table
refresh_trigger <- reactiveVal(0)
#----------------------
# Fetch all letters
#----------------------
letters_data <- reactive({
refresh_trigger()  # dependency
conn <- get_connection()
on.exit(dbDisconnect(conn), add = TRUE)
dbGetQuery(
conn,
"SELECT id, title, recipient, mood, date_created, content FROM letters ORDER BY date_created DESC"
)
})
#----------------------
# Render table
#----------------------
output$letters_table <- DT::renderDataTable({
df <- letters_data()
# Hide content column in table for cleanliness; we still keep it in data
df_display <- df %>% select(id, title, recipient, mood, date_created)
DT::datatable(
df_display,
selection = "single",
options = list(pageLength = 5)
)
})
#----------------------
# Create letter
#----------------------
observeEvent(input$create_btn, {
title <- input$title
content <- input$content
if (nchar(title) == 0 || nchar(content) == 0) {
output$status <- renderText("Title and content cannot be empty.")
return(NULL)
}
conn <- get_connection()
on.exit(dbDisconnect(conn), add = TRUE)
query <- "INSERT INTO letters (title, recipient, content, mood, date_created)
VALUES (?, ?, ?, ?, NOW())"
dbExecute(
conn,
query,
params = list(
title,
ifelse(nchar(input$recipient) == 0, NA, input$recipient),
content,
ifelse(input$mood == "Unspecified", NA, input$mood)
)
)
# Clear input fields
updateTextInput(session, "title", value = "")
updateTextInput(session, "recipient", value = "")
updateTextAreaInput(session, "content", value = "")
updateSelectInput(session, "mood", selected = "Unspecified")
output$status <- renderText("New letter saved.")
# Trigger table refresh
refresh_trigger(isolate(refresh_trigger()) + 1)
})
#----------------------
# Load selected letter into edit fields
#----------------------
observeEvent(input$letters_table_rows_selected, {
selected_row <- input$letters_table_rows_selected
if (length(selected_row) == 0) return()
df <- letters_data()
# letters_table shows a subset, but rows are in same order as df
letter <- df[selected_row, ]
updateTextInput(session, "edit_title", value = letter$title)
updateTextInput(session, "edit_recipient", value = ifelse(is.na(letter$recipient), "", letter$recipient))
updateSelectInput(
session,
"edit_mood",
selected = ifelse(is.na(letter$mood), "Unspecified", letter$mood)
)
updateTextAreaInput(session, "edit_content", value = letter$content)
})
#----------------------
# Update selected letter
#----------------------
observeEvent(input$update_btn, {
selected_row <- input$letters_table_rows_selected
if (length(selected_row) == 0) {
output$status <- renderText("Please select a letter to update.")
return(NULL)
}
df <- letters_data()
letter <- df[selected_row, ]
new_title <- input$edit_title
new_content <- input$edit_content
if (nchar(new_title) == 0 || nchar(new_content) == 0) {
output$status <- renderText("Title and content cannot be empty.")
return(NULL)
}
conn <- get_connection()
on.exit(dbDisconnect(conn), add = TRUE)
query <- "UPDATE letters
SET title = ?, recipient = ?, content = ?, mood = ?
WHERE id = ?"
dbExecute(
conn,
query,
params = list(
new_title,
ifelse(nchar(input$edit_recipient) == 0, NA, input$edit_recipient),
new_content,
ifelse(input$edit_mood == "Unspecified", NA, input$edit_mood),
letter$id
)
)
output$status <- renderText("Letter updated.")
refresh_trigger(isolate(refresh_trigger()) + 1)
})
#----------------------
# Delete selected letter
#----------------------
observeEvent(input$delete_btn, {
selected_row <- input$letters_table_rows_selected
if (length(selected_row) == 0) {
output$status <- renderText("Please select a letter to delete.")
return(NULL)
}
df <- letters_data()
letter <- df[selected_row, ]
conn <- get_connection()
on.exit(dbDisconnect(conn), add = TRUE)
dbExecute(conn, "DELETE FROM letters WHERE id = ?", params = list(letter$id))
output$status <- renderText(paste0("Letter with ID ", letter$id, " deleted."))
refresh_trigger(isolate(refresh_trigger()) + 1)
})
}
